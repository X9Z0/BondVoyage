# .env file for LocalStorageService setup
# Remove all AWS-related variables and use these instead

# Server Configuration
NODE_ENV=development
PORT=3000

# Storage Configuration
USE_LOCAL_STORAGE=false  # Set to 'true' to use file system only
LOCAL_STORAGE_PATH=./encrypted_storage

# MinIO Configuration (S3 Alternative)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=tourist-safety-encrypted

# Vault Configuration (KMS Alternative)
VAULT_ENDPOINT=http://localhost:8200
VAULT_TOKEN=myroot
VAULT_MOUNT_PATH=transit
VAULT_KEY_NAME=tourist-safety-key

# MongoDB Configuration (if using)
MONGODB_URI=mongodb://admin:password123@localhost:27017/tourist_safety?authSource=admin

# Redis Configuration (if using)
REDIS_URL=redis://:redis123@localhost:6379

# Blockchain Configuration
FABRIC_CHANNEL=mychannel
FABRIC_CHAINCODE=tourist-chaincode
CHAINCODE_VERSION=1.0

# Security
JWT_SECRET=local-jwt-secret-for-development

# Logging
LOG_LEVEL=debug

# Metrics (optional)
ENABLE_METRICS=true
METRICS_PORT=9090
